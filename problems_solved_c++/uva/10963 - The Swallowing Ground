#include <bits/stdc++.h>
using namespace std;

int main()
{
    int t,n,a,b,c=0,x=0,co=0;

    scanf("%d",&t);
    while(t--)
    {

        c=0;
        scanf("%d",&n);
        scanf("%d %d",&a,&b);
        x = abs(a-b);
        for(int i=1;i<n;++i)
        {
            scanf("%d %d",&a,&b);
            if(x != (abs(a-b)))  c=1;

        }

        puts(c ? "no" : "yes");
        if(t) puts("");

}
    return 0;
}
